<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- The bootstrap-context.xml file is used for patch definitions, importers, 
		 workflow, and loading custom content models.  -->
		 
	<bean id="rule-management-repo-shared-rules-bootstrap" class="org.alfresco.repo.module.ImporterModuleComponent" parent="module.baseComponent">
        <property name="moduleId" value="${project.artifactId}" />
        <property name="name" value="rule-management-repo-shared-rules-bootstrap" />
        <property name="description" value="Bootstraps Shared Rules folder" />
        <property name="sinceVersion" value="0.1" />
        <property name="importer" ref="spacesBootstrap" />
        <property name="bootstrapViews">
            <list>
                <props>
                    <prop key="path">/</prop>
                    <prop key="location">alfresco/module/${project.artifactId}/model/shared-rules-bootstrap.xml</prop>
                </props>
            </list>
        </property>
    </bean>
    
</beans>
